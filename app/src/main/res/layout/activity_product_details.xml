<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:id="@+id/textView_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/iv_product_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/view" />

    <TextView
        android:id="@+id/tv_list_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:text="@string/height"
        android:background="@color/grey_60"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:text="Высота" />

    <TextView
        android:id="@+id/tv_list_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal"
        android:text="@string/width"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:background="@color/grey_60"/>

    <TextView
        android:id="@+id/tv_list_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal"
        android:text="@string/glasses"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:background="@color/grey_60"/>

    <TextView
        android:id="@+id/tv_list_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="Профиль"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:background="@color/grey_60"/>

    <TextView
        android:id="@+id/tv_list_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="Подоконник"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:background="@color/grey_60"/>

    <TextView
        android:id="@+id/tv_list_6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="Отлив"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:background="@color/grey_60"/>

    <TextView
        android:id="@+id/tv_list_7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="Цена"
        android:textSize="24sp"
        android:gravity="end"
        android:textColor="@android:color/white"
        android:background="@color/grey_60"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/button1"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_dark"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/margin"
            android:layout_weight="1"
            android:textSize="12sp"
            android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/button2"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="@dimen/margin"
        android:layout_weight="1"
        android:textSize="12sp"
        android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/button3"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_dark"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/margin"
            android:layout_weight="1"
            android:textSize="12sp"
            android:onClick="onClick"/>

     </LinearLayout>
    </LinearLayout>