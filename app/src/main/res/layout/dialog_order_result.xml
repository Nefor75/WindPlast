<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundred"
        android:padding="@dimen/margin"
        android:text="@string/order_result"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/grey_10"
        android:gravity="center|start"
        android:orientation="vertical"
        android:padding="@dimen/margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_width_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/width_height"
                android:textColor="@color/grey_80" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/spacing_xmedium"
                android:gravity="center_vertical|end"
                android:text="Шир."
                android:textColor="@color/grey_80" />

            <TextView
                android:id="@+id/tv_width"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/my_rectangle"
                android:gravity="center"
                android:text="1000"
                android:textColor="@color/grey_80"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/spacing_xmedium"
                android:text="Выс."
                android:textColor="@color/grey_80" />

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/my_rectangle"
                android:gravity="center"
                android:text="1000"
                android:textColor="@color/grey_80"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xmedium"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profilWithDots"
                android:textColor="@color/grey_80" />

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/my_rectangle"
                android:gravity="center"
                android:text="Rehau"
                android:textColor="@color/grey_80"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xmedium"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fittingsWithDots"
                android:textColor="@color/grey_80" />

            <TextView
                android:id="@+id/tv_furniture"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/my_rectangle"
                android:gravity="center"
                android:text="Roto"
                android:textColor="@color/grey_80"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xmedium"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/glassesWithDots"
                android:textColor="@color/grey_80" />

            <TextView
                android:id="@+id/tv_glasses"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/my_rectangle"
                android:gravity="center"
                android:text="4/16/4"
                android:textColor="@color/grey_80"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xmedium"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sillWithDots"
                android:textColor="@color/grey_80" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/spacing_xmedium"
                android:gravity="center_vertical|end"
                android:text="Шир."
                android:textColor="@color/grey_80" />

            <TextView
                android:id="@+id/textView_width_sill"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/my_rectangle"
                android:gravity="center"
                android:text="1000"
                android:textColor="@color/grey_80"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/spacing_xmedium"
                android:text="Длин."
                android:textColor="@color/grey_80" />

            <TextView
                android:id="@+id/textView_height_sill"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/my_rectangle"
                android:gravity="center"
                android:text="1000"
                android:textColor="@color/grey_80"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xmedium"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weatheringWithDots"
                android:textColor="@color/grey_80" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/spacing_xmedium"
                android:gravity="center_vertical|end"
                android:text="Шир."
                android:textColor="@color/grey_80" />

            <TextView
                android:id="@+id/tv_width_weathering"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/my_rectangle"
                android:gravity="center"
                android:text="1000"
                android:textColor="@color/grey_80"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/spacing_xmedium"
                android:text="Длин."
                android:textColor="@color/grey_80" />

            <TextView
                android:id="@+id/tv_height_weathering"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/my_rectangle"
                android:gravity="center"
                android:text="1000"
                android:textColor="@color/grey_80"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/spacing_xmedium"
        android:layout_weight="2"
        android:background="@color/green"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cost"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000 грн"
            android:textColor="@android:color/white"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="@dimen/spacing_xmedium"
        android:layout_marginBottom="@dimen/spacing_xmedium"
        android:background="@color/orange"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bt_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_medium"
            android:src="@mipmap/arrow_back_round" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orange"
            android:gravity="start|center_vertical"
            android:text="@string/back"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/green" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_medium"
            android:src="@mipmap/share_round" />

        <TextView
            android:id="@+id/tv_transfer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orange"
            android:gravity="start|center_vertical"
            android:text="@string/transfer"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/green" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_medium"
            android:src="@mipmap/save_round" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orange"
            android:gravity="start|center_vertical"
            android:text="@string/save"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>