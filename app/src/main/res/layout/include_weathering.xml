<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/grey_20"
    android:layout_marginHorizontal="@dimen/margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_weathering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:paddingTop="@dimen/spacing_xmedium"
            android:layout_gravity="center_vertical"
            android:text="@string/weathering"
            android:textColor="@android:color/black" />

        <CheckBox
            android:id="@+id/chbx_weadering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyRadioButton"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_mlarge"
            android:onClick="Radiogroup"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <RadioGroup
            android:id="@+id/rg_weathering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:layout_marginEnd="@dimen/margin"
            android:theme="@style/MyRadioButton"
            android:visibility="gone">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Украина"
                android:textColor="@android:color/black" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="США"
                android:textColor="@android:color/black" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Weathering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView_width"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/width"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/edit_width"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/spacing_xmedium"
            android:layout_marginEnd="@dimen/spacing_xmedium"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:background="@drawable/my_rectangle"
            android:focusable="false"
            android:layout_weight="1"
            android:text="170"/>

        <TextView
            android:id="@+id/textView_height"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/length"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_xmedium"
            android:textColor="@android:color/black"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/edit_height"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/spacing_xmedium"
            android:layout_marginEnd="@dimen/margin"
            android:layout_gravity="center_vertical|end"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:background="@drawable/my_rectangle"
            android:focusable="false"
            android:layout_weight="1"
            android:text="1600"/>

    </LinearLayout>
</LinearLayout>