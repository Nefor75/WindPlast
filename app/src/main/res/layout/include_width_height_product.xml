<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_width_height"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_10"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_width"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/width"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/edit_width"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/spacing_xmedium"
        android:layout_marginEnd="@dimen/spacing_xmedium"
        android:layout_weight="1"
        android:background="@drawable/my_rectangle"
        android:focusable="false"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/spacing_xmedium"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/height"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/edit_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end"
        android:layout_margin="@dimen/spacing_xmedium"
        android:layout_marginEnd="@dimen/margin"
        android:layout_weight="1"
        android:background="@drawable/my_rectangle"
        android:focusable="false"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

</LinearLayout>