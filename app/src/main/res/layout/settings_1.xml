<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/margin"
    android:layout_marginTop="@dimen/margin"
    android:layout_marginEnd="@dimen/margin"
    android:layout_marginBottom="@dimen/spacing_xlarge"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/set1_tv_up_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/two"
        android:textColor="@android:color/white"
        android:layout_weight="1"
        android:padding="@dimen/spacing_xmedium"/>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <TextView
            android:id="@+id/set1_tv_up_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/balkon"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:padding="@dimen/spacing_xmedium"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/set1_iv_up_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:onClick="onClick"
            android:src="@drawable/img_200x130"
            tools:ignore="NestedWeights"
            android:padding="@dimen/spacing_xlarge"/>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <ImageView
            android:id="@+id/set1_iv_up_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bb"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:onClick="onClick"
            android:padding="@dimen/spacing_xlarge"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/set1_tv_mid_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/one_po"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:padding="@dimen/spacing_xmedium" />

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <TextView
            android:id="@+id/set1_tv_mid_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/deaf"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:padding="@dimen/spacing_xmedium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/set1_iv_mid_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/one_po"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:onClick="onClick"
            tools:ignore="NestedWeights"
            android:padding="@dimen/spacing_xlarge"/>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <ImageView
            android:id="@+id/set1_iv_mid_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/deaf"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:onClick="onClick"
            android:padding="@dimen/spacing_xlarge" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/set1_tv_bottom_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/four"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:padding="@dimen/spacing_xmedium" />

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <TextView
            android:id="@+id/set1_tv_bottom_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/triple"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:padding="@dimen/spacing_xmedium" />

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1" >

        <ImageView
            android:id="@+id/set1_iv_bottom_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/four"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:onClick="onClick"
            android:padding="@dimen/spacing_xlarge"/>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <ImageView
            android:id="@+id/set1_iv_bottom_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/triple"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:onClick="onClick"
            android:padding="@dimen/spacing_xlarge"/>

</LinearLayout>
</LinearLayout>















