<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- SplashTheme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/blu</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- ActivityMain theme. -->
    <style name="Main" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        </style>

    <!-- Toolbar theme. -->
    <style name="Toolbar"> parent="Theme.AppCompat.NoActionBar"
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:height">?attr/actionBarSize</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="colorControlNormal">@color/orange</item>
    </style>

    <!-- ТРИ ТОЧКИ МЕНЮ -->
    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/icon_menu_in_toolbar_24dp</item>
    </style>

    <!-- Spinner -->
    <style name="Spinner" parent="@android:style/Theme.Light">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>

    </style>
    <!-- Spinner 1-->
    <style name="SpinnerItem">
        <item name="android:textColor">#993399</item>
        <item name="android:background">@drawable/my_rectangle</item>
    </style>

    <!-- Spinner 2-->
    <style name="SpinnerDropDownItem">
        <item name="android:textColor">#993399</item>
        <item name="android:background">@drawable/my_rectangle</item>
        <item name="android:popupBackground">#ffffff</item>//а может и не сюда(в Spinner1 или Spinner2)
    </style>

    <!-- TableLayout theme. -->
    <style name="Table">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- Focusable ImageViev. -->
    <style name="FocusImage" >
<!--        <item name="colorControlNormal">@android:color/transparent</item>-->
<!--        <item name="colorControlActivated">@android:color/black</item>-->
        </style>

</resources>
