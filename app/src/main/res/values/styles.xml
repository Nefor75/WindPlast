<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- SplashTheme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/blu</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- ActivityMain theme. -->
    <style name="Main" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        </style>

    <!-- Toolbar theme. -->
    <style name="Toolbar"> parent="Theme.AppCompat.NoActionBar"
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:height">?attr/actionBarSize</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="colorControlNormal">@color/orange</item>
    </style>

    <!-- ColorRadio -->
    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/green</item>
    </style>

    <!-- ТРИ ТОЧКИ МЕНЮ -->
    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/icon_menu_in_toolbar_24dp</item>
    </style>

    <!-- Spinner -->
    <style name="Spinner" parent="Theme.Design.Light">
               <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>

    </style>
    <!-- Spinner 1-->
    <style name="SpinnerItem">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Spinner 2-->
    <style name="SpinnerDropDownItem">
        <item name="android:background">@android:color/black</item>

    </style>

</resources>
